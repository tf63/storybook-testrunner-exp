{
    "name": "turbo-template",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "test": "turbo test",
        "test:watch": "turbo test:watch",
        "test:ui": "turbo test:ui",
        "test:e2e": "turbo test:e2e",
        "test:e2e:ui": "turbo test:e2e:ui",
        "format": "biome format . --write && prettier . --write",
        "prepare": "husky",
        "generate": "plop"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.8.3",
        "@playwright/test": "^1.45.3",
        "@storybook/blocks": "^8.2.7",
        "@storybook/nextjs": "^8.2.7",
        "@storybook/react": "^8.2.7",
        "@storybook/test": "^8.2.7",
        "@vitejs/plugin-react": "^4.3.1",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "@vitest/coverage-v8": "^2.0.5",
        "@vitest/ui": "^2.0.5",
        "@testing-library/jest-dom": "^6.4.8",
        "@testing-library/react": "^16.0.0",
        "@types/node": "^22.1.0",
        "@types/react": "^18.2.61",
        "@types/react-dom": "^18.2.19",
        "husky": "^9.1.4",
        "lint-staged": "^15.2.8",
        "turbo": "^2.0.11",
        "plop": "^4.0.1",
        "jsdom": "^24.1.1",
        "autoprefixer": "^10.4.20",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vite": "^5.3.4",
        "vitest": "^2.0.4"
    },
    "lint-staged": {
        "**.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": ["biome check --write"],
        "**.{md,mdx,yml,yaml,css,html}": ["prettier --write"]
    },
    "packageManager": "pnpm@8.15.6",
    "engines": {
        "node": ">=18"
    },
    "volta": {
        "node": "20.11.0"
    }
}
